@model WebApplication3.Models.Review
@{
    ViewBag.Title = "GamesReviews";
}

@helper CreateTable(List<WebApplication3.Models.Review> review)
{
    <div class="container">
        <div class="row">
            <div class="col-1-2">
                <table>
                    <tr>
                        <th>Имя пользователя</th>
                    </tr>
                    @foreach (var d in review)
                    {
                        <tr>
                            <td>
                                @d.UserName
                                @d.ReviewScore
                                @d.ReviewText
                            </td>
                        </tr>
                    }
                </table>
            </div>    
        </div>
    </div>
}

@{
    var reviewList = new List<WebApplication3.Models.Review>(ViewBag.Reviews);
}

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div>
        @Html.LabelFor(model => model.GameId, "Выбор игры", htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.DropDownListFor(model => model.GameId, new SelectList(ViewBag.Games, "GameId", "GameName"))
        </div>
        <input type="submit" , value="Показать отзывы">
    </div>
}

@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong>
        </div>
        @CreateTable(reviewList);
    }
}  

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}