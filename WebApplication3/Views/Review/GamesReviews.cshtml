@model WebApplication3.Models.Review
@{
    ViewBag.Title = "GamesReviews";
}

@helper CreateTable(List<WebApplication3.Models.Review> review)
{
<div class="container card_flex">
    @foreach (var d in review)
    {
        <div class="card card_color" style="width: 30%;">
            <!--<img src="..." class="card-img-top" alt="...">-->
            <div class="card-body">
                <h5 class="card-title">@d.Username  Оценка: @d.ReviewScore</h5>
                <p class="card-text text-truncate">@d.ReviewText</p>
                <a href="#exampleModal1" id="showModal" class="btn btn-outline-light stretched-link" data-toggle="modal" data-target="#myModal">Показать больше</a>
            </div>
        </div>
        <div id="myModal" class="modal fade" tabindex="-1">
            <div class="modal-dialog modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header card_color">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body card_color">
                    </div>
                    <div class="modal-footer card_color">
                    </div>
                </div>
            </div>
        </div>        
    }
</div>
}

@{
    var reviewList = new List<WebApplication3.Models.Review>(ViewBag.Reviews);
}
<div>
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        <div>
            @Html.LabelFor(model => model.GameId, "Выбор игры", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.DropDownListFor(model => model.GameId, new SelectList(ViewBag.Games, "GameId", "GameName"))
            </div>
            <input type="submit" value="Показать отзывы" class="btn btn-light">
        </div>
    }

    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
    {
        if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                <strong>Success!</strong>
            </div>
            @CreateTable(reviewList);
        }
    }
</div>
@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

<style type="text/css">
    .card_flex {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
    }

    .card_color {
        background-color: gray;
    }
</style>
