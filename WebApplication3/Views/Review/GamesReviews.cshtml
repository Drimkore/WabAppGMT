@model WebApplication3.Models.Review
@{
    ViewBag.Title = "GamesReviews";
}

<div>
    @using (Ajax.BeginForm("WordSearch", new AjaxOptions { UpdateTargetId = "results" }))
    {
        <div class="input-group" style="justify-content: center">
            <input type="text" name="word" class="form-control" placeholder="Автор, текст, название" />
            <button type="submit" name="Поиск" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="visually-hidden">Поиск</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><button class="dropdown-item" value="1" name="choose"> Автор отзыва </button> </li>
                <li><button class="dropdown-item" value="2" name="choose"> Текст отзыва </button></li>
                <li><button class="dropdown-item" value="3" name="choose"> Название игры </button></li>
            </ul>
        </div>
    }
    <div id="results"></div>
</div>

