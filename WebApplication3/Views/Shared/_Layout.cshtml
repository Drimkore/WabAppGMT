<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-dark text-white text-center direction_flex">
    <nav class="navbar navbar-dark">
        <div class="container" style="height:50px;width:690px;">

            @Html.ActionLink("GaMeta", "Index", "Home", new { area = "" }, new { @class = "navbar-brand hed" })
            <!--<div class="nav justify-content-around ">-->
            @Html.ActionLink("Просмотр отзывов", "GamesReviews", "Review")
            @if (Request.IsAuthenticated)
            {
                @Html.ActionLink("Мои отзывы", "MyReviews", "Review")
                @Html.ActionLink("Написать отзыв", "Review", "Review")
                using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm" }))
                {
                    <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                }
            }
            <!--</div>-->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content direction_flex">
        @RenderBody()
        
    </div>
    <div class="flex-pos"></div>
    <footer class="text-center" style="color:gray;">
        <hr />
        <p>&copy; @DateTime.Now.Year - GaMeta - Здесь могла быть ссылка на нас...</p>
    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



<style type="text/css">
    .direction_flex {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    html, body {
        height: 100%;
    }

    .hed {
        background: linear-gradient(to right, #f7ac22,#f9ea45); /* Градиент для текста */
        -webkit-background-clip: text; /* Обрезаем фон по тексту */
        -webkit-text-fill-color: transparent; /* Прозрачный текст */
    }

    a {
        background: linear-gradient(to top, #f7ac22,#f9ea45); /* Градиент для текста */
        -webkit-background-clip: text; /* Обрезаем фон по тексту */
        -webkit-text-fill-color: transparent; /* Прозрачный текст */
        text-decoration: none;
    }

        a .active {
            color: white;
            border-bottom-color: #ffd800
        }

        a:hover {
            color: white;
            border-bottom: solid;
            border-bottom-color: #ffd800;
            text-decoration: none;
        }

        a:focus {
            color: white;
            border-bottom: solid;
            border-bottom-color: #ffd800;
            text-decoration: none;
        }

    nav a.active {
        color: white;
        border-bottom-color: #fff
    }


    footer {
        position: relative;
        bottom: 0;
    }

    .flex-pos {
        flex: 1 0 auto;
    }
</style>